<h1>Albums</h1>
<hr class="style1">

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Quantity</th>
    <th></th>
    <th>Stock Level</th>
    <th></th>
    <th>Artist</th>
    <th></th>
    <th>Profit</th>
    <th></th>
  </tr>
  <% for album in @albums %>
  <tr>
    <td><%= album.name %></td>
    <td></td>
    <td><%= album.quantity %></td>
    <td></td>
    <td><%= album.stock_level %></td>
    <td></td>
    <td><%= album.find_artist.name %></td>
    <td></td>
    <td><%= album.profit %></td>
    <td></td>
    <td style ="font-size: 9px"><a href="/albums/<%=album.id%>/edit">edit</td>
    <td></td>
  </tr>
  <% end %>
</table>

<p><a class = "btn btn--new" href="/albums/new">New Album</a></p>

